# Multi-stage build for Go critic service
FROM golang:1.22-alpine AS builder

# Set working directory
WORKDIR /app

# Copy the entire project structure (needed for replace directives)
COPY . .

# Download dependencies and build the application
RUN cd cmd/agent-critic && go mod download && CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -ldflags '-w -s' -o agent-critic .

# Final stage
FROM alpine:latest

# Install ca-certificates for HTTPS requests
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# Copy the binary from builder stage
COPY --from=builder /app/cmd/agent-critic/agent-critic .

# Expose port
EXPOSE 8083

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8083/health || exit 1

# Run the binary
CMD ["./agent-critic"]
